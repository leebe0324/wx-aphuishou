/* pages/AppLunchPages/start.wxss */
.start{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:1;
  transition: all .3s;
}
.start-img{
  width:750rpx;
  height:100%;
  overflow:hidden;
}
.auth{
  position:absolute;
  bottom:10rpx;
  left:50%;
  transform: translate(-50%);
  color:#fff;
  font-size:32rpx;
background-image: linear-gradient(-90deg, #5ECBEC 0%, #448DF3 100%);
box-shadow: 0 5px 5px 0 rgba(77,161,241,0.36);
border-radius: 100px;
}
.hid{
  opacity:0;
  z-index:-1;
}